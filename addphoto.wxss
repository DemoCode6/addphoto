.push_content{
  width: 100%;
  min-height: 430rpx;
  background-color: #fff;
  padding: 25rpx 50rpx 24rpx 50rpx;
  box-sizing: border-box;
}
.push_content1{
  font-size: 30rpx;
  color: #4c4c4c;
  font-weight: bold;
  margin-bottom: 47rpx;
}
.section textarea{
  width: 100%;
}
/* 选择相册中的图片或者拍照 */
.upload-view{
  margin-top: 65rpx;
}
.image{
  width: 121rpx;
  height: 121rpx;
  display: inline-block;
}
.image image{
  width: 121rpx;
  height: 121rpx;
  display: inline-block;
}
.ui_uploader_item{
  display: inline-block;
  position: relative;
}
icon{
  position: absolute;
  top: -15rpx;
  right: 12rpx;
}
.special-image{
  height: 130rpx;
  width: 130rpx;
  display: inline-block;
  margin-right: 30rpx;
}
