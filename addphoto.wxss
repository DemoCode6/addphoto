/* 联系人 */
.lianxiren{
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  padding: 25rpx 56rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  display: flex;
}

.lianxiren input{
  display: inline-block;
}
.read{
  color: #4c4c4c;
  margin-left: 57rpx;
  margin-top: 25rpx;
}
.read text:nth-of-type(2){
  color: #0081fb;
}
.readyuan {
  display: inline-block;
  width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  border-radius: 50%;
  background-color: #858686;
  color: #fff;
  text-align: center;
  margin-right: 20rpx;
}
.readyuanactive{
  display: inline-block;
  width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  border-radius: 50%;
  color: #fff;
  text-align: center;
  margin-right: 20rpx;
  background-color: #0095fa;
}
.addphoto_footer{
  width: 80%;
  margin: auto;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background-image: linear-gradient(to right, #007ffb , #01adf8);
  border-radius: 25rpx;
  margin-top: 70rpx;
}